{
  "name": "plasticboy",
  "version": "2.5.0",
  "description": "3D Model Collection App for Almaty with Telegram Bot - FIXED VERSION",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    
    "bot": "node bot-server.js",
    "bot:dev": "nodemon bot-server.js",
    "bot:setup": "node setup-telegram-bot.js",
    "bot:diagnose": "node diagnose-bot.js",
    "bot:fix": "node fix-webhook.js",
    
    "dev:all": "concurrently \"npm run dev\" \"npm run bot:dev\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    
    "render:web": "node server.js",
    "render:bot": "node bot-server.js",
    
    "postinstall": "echo 'Dependencies installed for Render.com deploy'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    
    "node-telegram-bot-api": "^0.66.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "telegram",
    "bot",
    "qr-code",
    "geolocation",
    "almaty",
    "collection",
    "gamification",
    "render",
    "webhook",
    "polling"
  ],
  "author": "PlasticBoy Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/plasticboy.git"
  },
  "render": {
    "services": [
      {
        "name": "plasticboy-web",
        "type": "web",
        "env": "node",
        "buildCommand": "npm install",
        "startCommand": "npm run render:web",
        "plan": "free",
        "envVars": [
          {
            "key": "NODE_ENV",
            "value": "production"
          }
        ]
      },
      {
        "name": "plasticboy-bot", 
        "type": "worker",
        "env": "node",
        "buildCommand": "npm install",
        "startCommand": "npm run render:bot",
        "plan": "free",
        "envVars": [
          {
            "key": "NODE_ENV",
            "value": "production"
          }
        ]
      }
    ]
  }
}
