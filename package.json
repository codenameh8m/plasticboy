{
  "name": "plasticboy",
  "version": "2.2.0",
  "description": "3D Model Collection App for Almaty with Advanced Caching & Telegram Bot",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup": "node setup.js",
    
    "bot": "cd telegram-bot && node bot.js",
    "bot:dev": "cd telegram-bot && nodemon bot.js",
    "bot:setup": "cd telegram-bot && node setup-bot.js",
    "bot:install": "cd telegram-bot && npm install",
    
    "start:all": "concurrently \"npm start\" \"npm run bot\"",
    "dev:all": "concurrently \"npm run dev\" \"npm run bot:dev\"",
    
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "qr-code",
    "geolocation",
    "cache",
    "telegram",
    "bot",
    "oauth",
    "almaty",
    "collection",
    "gamification"
  ],
  "author": "PlasticBoy Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/plasticboy.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/plasticboy/issues"
  },
  "homepage": "https://github.com/your-org/plasticboy#readme",
  "config": {
    "telegram": {
      "enabled": true,
      "botSetupUrl": "https://t.me/botfather"
    },
    "mongodb": {
      "uri": "mongodb://localhost:27017/plasticboy"
    }
  }
}
