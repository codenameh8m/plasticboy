{
  "name": "plasticboy",
  "version": "2.3.0",
  "description": "3D Model Collection App for Almaty with Telegram Bot - Render.com Deploy",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "bot": "node bot-server.js",
    "bot:dev": "nodemon bot-server.js",
    "bot:setup": "node bot/setup-bot.js",
    
    "dev:all": "concurrently \"npm run dev\" \"npm run bot:dev\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    
    "render:web": "npm start",
    "render:bot": "npm run bot",
    
    "postinstall": "echo 'Dependencies installed for Render.com deploy'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    
    "node-telegram-bot-api": "^0.65.1",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "telegram",
    "bot",
    "qr-code",
    "geolocation",
    "almaty",
    "collection",
    "gamification",
    "render",
    "autodeploy"
  ],
  "author": "PlasticBoy Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/plasticboy.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/plasticboy/issues"
  },
  "homepage": "https://github.com/your-username/plasticboy#readme",
  "render": {
    "services": [
      {
        "name": "plasticboy-web",
        "type": "web",
        "env": "node",
        "buildCommand": "npm install",
        "startCommand": "npm run render:web"
      },
      {
        "name": "plasticboy-bot", 
        "type": "worker",
        "env": "node",
        "buildCommand": "npm install",
        "startCommand": "npm run render:bot"
      }
    ]
  }
}
